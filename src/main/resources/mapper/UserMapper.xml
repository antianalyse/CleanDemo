<!--        select *-->
<!--        from user-->
<!--        where id = #{id}-->
<!--          and password = #{password}-->
<!--    </select>-->


    <!--增加一个User-->
    <insert id="addUser" parameterType="User">
        insert into user(id, password, nickname)
        values (#{id}, #{password}, #{nickname})
    </insert>


</mapper>